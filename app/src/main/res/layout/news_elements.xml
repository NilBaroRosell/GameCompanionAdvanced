<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:background="?android:attr/selectableItemBackground"
        android:layout_marginTop="@dimen/CardMargins"
        android:layout_marginLeft="@dimen/CardMargins"
        android:layout_marginRight="@dimen/CardMargins"
        android:layout_width="match_parent"
        android:layout_height="@dimen/CardHeight"
        android:id="@+id/newCard"
        android:backgroundTint="@color/blackTextColor">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/newImage"
                android:layout_marginTop="@dimen/CardImageMarginTop"
                android:layout_width="@dimen/CardImageSize"
                android:layout_height="@dimen/CardImageSize"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/CardImageMarginLeft"
                android:src="@drawable/ic_profile" />

            <TextView
                android:id="@+id/newText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:textSize="@dimen/CardTextSize"
                android:text=""
                android:layout_marginRight="@dimen/CardTextMarginRight"
                android:layout_marginLeft="@dimen/CardMargins"
                android:layout_marginTop="@dimen/CardMargins"
                android:layout_marginBottom="@dimen/CardMargins"
                android:textColor="@color/textColor"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>